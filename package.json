{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Easy to use, mern boilerplate. Ready to deploy to heroku, no further configuration required.",
  "main": "index.js",
  "scripts": {
    "dev:app": "parcel watch src/app/index.html",
    "dev:server": "nodemon --watch src/server src/server/index.js",
    "dev": "concurrently -n app,server -c green,blue \"npm run dev:app\" \"npm run dev:server\"",
    "build": "parcel build src/app/index.html --out-dir src/server/public/app --public-url /app",
    "start": "NODE_ENV=production node src/server/index.js",
    "heroku-postbuild": "npm run build"
  },
  "author": "Lukas Gisder-Dub√©",
  "license": "ISC",
  "dependencies": {
    "apollo-boost": "^0.1.16",
    "apollo-server": "^2.1.0",
    "apollo-server-express": "^2.1.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "cloudinary": "^1.11.0",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-fileupload": "^0.4.0",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "graphql-server-express": "^1.4.0",
    "graphql-tools": "^4.0.1",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.2.14",
    "mongoose-autopopulate": "^0.8.1",
    "morgan": "^1.9.1",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-beautiful-dnd": "^9.0.2",
    "react-countdown-now": "^1.3.0",
    "react-datepicker": "^1.6.0",
    "react-dom": "^16.5.2",
    "react-moment": "^0.8.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "superheroes": "^2.0.0",
    "supervillains": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^4.0.1",
    "cssnano": "^4.1.0",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.9.7",
    "react-hot-loader": "^4.3.7"
  },
  "engines": {
    "node": "8.11.4"
  }
}
